<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:fillViewport="false"
        >




        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="560dp"
            >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="fill_parent"
                android:layout_height="232dp"
                android:src="@drawable/eventos2"
                android:layout_gravity="top"
                android:scaleType="fitXY"

                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/txtv0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Nesta secçao encontra alguns dos Eventos/Festas que irão ocorrer na cidade do Porto. \n\nAqui estão as nossas sugestões:"
                android:elegantTextHeight="false"
                android:textAlignment="center"
                android:layout_marginTop="37dp"
                android:layout_below="@+id/imageView1"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                />


            <TextView
                android:id="@+id/txtv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtv0"
                android:layout_below="@+id/txtv0"
                android:layout_marginTop="22dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                />
            <TextView
                android:id="@+id/txtv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/txtv7"
                android:layout_marginTop="22dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"

                android:gravity="left"
                android:text="Pretende divulgar o seu evento?\nEnvie-nos os dados para posterior publicação preenchendo o seguinte formulário para entrar na nossa base de dados."/>

            <TextView
                android:id="@+id/txtv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="26dp"


                android:gravity="center"
                android:text="FORMULÁRIO\n\n"
                android:textStyle="bold"
                android:textSize="18dp"
                android:onClick="play"
                android:clickable="true"
                android:layout_below="@+id/txtv2"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/nomeDoBotao10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textoDoBotao"
                android:layout_below="@+id/txtv3"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp" />

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>