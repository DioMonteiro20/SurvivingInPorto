<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:fillViewport="false"
        >




        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="560dp"
            >



            <EditText
                android:hint="Username"
                android:id="@+id/destino3"
                android:layout_gravity="center_horizontal"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="92dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:maxLength="20"/>

            <EditText
                android:hint="Password"
                android:id="@+id/escrever5"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions|textVisiblePassword"
                android:maxLength="110"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/destino3"
                android:layout_alignLeft="@+id/destino3"
                android:layout_alignStart="@+id/destino3" />

            <EditText
                android:hint="Código de Confirmação"
                android:id="@+id/escrever6"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions|textVisiblePassword"
                android:maxLength="6"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/escrever5"
                android:layout_alignLeft="@+id/escrever5"
                android:layout_alignStart="@+id/escrever5" />

            <Button
                android:id="@+id/nomeDoBotao16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Validar Conta"
                android:layout_below="@+id/escrever6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="118dp" />



            <TextView android:id="@+id/linkSignup14"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="\n\nVolte aqui para o Login!"
                android:gravity="center"
                android:textSize="16dip"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/nomeDoBotao16"
                android:onClick="loginVal"
                android:clickable="true"
                android:textStyle="bold"/>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>